{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "../murchat/common/types.js": ["../murchat/common/types.ts"],
      "../murchat/common/permissions.js": ["../murchat/common/permissions.ts"],
      "@prisma/client": ["./node_modules/.prisma/client/index.d.ts"]
    }
  },
  "include": ["index.ts"],
  "exclude": ["node_modules"]
}
